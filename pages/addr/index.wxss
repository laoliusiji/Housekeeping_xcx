
.addr{
  height: 180rpx;
  background: #fff;
}

.addr .lt{
  float: left;
  width: 10%;
  text-align: center;
  font-size: 36rpx;
  line-height: 150rpx;
}
.addr .ct{
  float: left;
  width: 70%;
  margin-top: 50rpx;
  overflow: hidden;
}
.addr .ct view{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
}
.addr .rt{
  float: right;
  width: 10%;
  text-align: center;
  line-height: 150rpx;
}

.addbtn{
  height: 100rpx;
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
}
.addbtn button{
  width: 60%;
  height: 80rpx;
  font-size: 26rpx;
  line-height: 80rpx;
  float: left;
  margin-left: 20%;
  margin-top: 10rpx;
  color: #fff;
}