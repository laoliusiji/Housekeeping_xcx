.app .receivables {
  width: 90%;
  height: auto;
  padding: 0 5%;
  padding-top: 60rpx;
}

.app .receivables .title{
  width: auto;
  font-size: 24rpx;
  color: #000;
}

.app .receivables .receinput {
  width: 100%;
  height: 120rpx;
  margin-top:40rpx;
}

.app .receivables .receinput text {
  width: 10%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 50rpx;
  float: left;
}

.app .receivables .receinput input {
  width: 90%;
  height: 120rpx;
  font-size: 80rpx;
  float: left;
}

.app .line {
  width: 90%;
  height: 2rpx;
  margin: 0 5%;
  background: #f5f5f5;
}

.app button {
  width: 86%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 40rpx 5%;
  background: #71c671;
  color: #fff;
}

.app .kongbai {
  width: 100%;
  height: 10rpx;
}

.app .botview {
  width: 92%;
  height: auto;
  margin: 15rpx 4%;
}

.app .botview .item {
  width: 33.3%;
  height: auto;
  text-align: center;
  float: left;
}

.app .botview .item .img {
  width: 100%;
  height: 45rpx;
}

.app .botview .item image {
  width: 45rpx;
  height: 45rpx;
}

.app .botview .item .texts {
  margin-top: 10rpx;
  color: #8a8a8a;
  font-size: 22rpx;
}
