/**index.wxss**/

.app {
  width: 100%;
  height: auto;
  overflow: hidden;
  font-size: 26rpx;
}

.app .paycons {
  width: 92%;
  height: auto;
  margin: 4% 4%;
  background: #fff;
  margin-top: 120rpx;
}

.paycons .header {
  width: 92%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 4%;
  border-bottom: 1rpx #f5f5f5 solid;
}

.paycons .header .lt {
  width: 85%;
  height: 100rpx;
  float: left;
  display: inline-flex;
}

.paycons .header .lt image {
  width: 56rpx;
  height: 48rpx;
  margin: 26rpx 0;
  float: left;
}

.paycons .header .lt text {
  width: 100%;
  height: 100rpx;
  margin: 0 15rpx;
  line-height: 100rpx;
  overflow: hidden;
  font-size: 26rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  float: left;
}

.col{
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  margin: 0 5%;
  border-bottom: 2rpx #f5f5f5 dotted;
}
.col .icon{
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.col input{
  float: right;
  width: 68%;
  height: 100rpx;
  line-height: 100rpx;
  
}
.col text{
  float: left;
  color: #000;
  font-size: 28rpx;
}

