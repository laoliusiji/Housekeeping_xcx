/* pages/order/index.wxss */

.app  .menu {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-bottom: solid 1rpx #f4f5f6;
}

.menu text {
  float: left;
  width: 25%;
  font-size: 30rpx;
  text-align: center;
}

.app  .menu text.active {
  color: #07b7ce;
  border-bottom: 5rpx solid #07b7ce;
}

.order {
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-top: 15rpx;
  background: #fff;
  border: 1rpx solid #e2e2e2;
}

.product_type {
  height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
}

.product_bottom {
  height: 80rpx;
  border-top: 1rpx solid #f3f3f3;
}


.handle {
  width: auto;
  height: 40rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  float: right;
  border: 1rpx #515151 solid;
  border-radius: 8rpx;
  padding: 0 12rpx;
}

.product_type image {
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.gtype {
  float: left;
  width: 120rpx;
  height: 40rpx;
  margin-left: 5%;
  margin-top: 20rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #000;
}

.type {
  float: right;
  width: 180rpx;
  height: 40rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  text-align: right;
}

.product {
  width: 90%;
  margin: 0 auto;
  height: auto;
  margin-top: 20rpx;
}

.title {
  font-size: 26rpx;
  color: #000;
  height: 50rpx;
}

.name {
  float: left;
}

.price {
  float: right;
  color: red;
  font-size: 32rpx;
}

.riqi {
  display: block;
  margin: 10rpx 0;
  font-size: 24rpx;
  color: #000;
}

.info {
  display: block;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #000;
}
