/* pages/index/type.wxss */

.hot {
  width: 96%;
  height: auto;
  margin-left: 2%;
  padding-top: 10rpx;
  margin-top: 20rpx;
  background: #fff;
}

.hot .pro {
  width: 100%;
  height: 260rpx;
  overflow: hidden;
  white-space: nowrap;
  float: left;
}

.item {
  width: 46%;
  height: 260rpx;
  display: inline-block;
  margin-left: 2.5%;
  margin-top: 20rpx;
  background: #fff;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
}

.item image {
  width: 100%;
  height: 180rpx;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  display: block;
}

.item .name {
  width: 100%;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item .hint {
  width: 100%;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  overflow: hidden;
  font-size: 22rpx;
  color: #bdbdbd;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block;
}
